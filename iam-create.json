{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "VisualEditor0",
      "Effect": "Allow",
      "Action": ["ec2:DescribeInstances", "ec2:DescribeSecurityGroups"],
      "Resource": "*"
    },
    {
      "Sid": "VisualEditor1",
      "Effect": "Allow",
      "Action": [
        "ec2:RevokeSecurityGroupIngress",
        "ec2:AuthorizeSecurityGroupIngress"
      ],
      "Condition": {
        "StringEquals": {
          "aws:ResourceTag/Name": "precon"
        }
      },
      "Resource": "arn:aws:ec2:ap-northeast-1:*:security-group/*"
    }
  ]
}
